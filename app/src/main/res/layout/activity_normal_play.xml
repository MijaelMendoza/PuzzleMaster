<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/ic_background">

    <!-- Spinner para seleccionar la dificultad -->
    <Spinner
        android:id="@+id/spinnerDificultad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:entries="@array/dificultades"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/cronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

    <!-- Tablero de Meta -->
    <GridLayout
        android:id="@+id/tableroMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Tablero de Puzzle del Jugador -->
    <GridLayout
        android:id="@+id/tableroJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Botones de Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:weightSum="3"
        android:padding="20dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nuevo"
            android:textSize="20dp"
            android:id="@+id/btnNuevo"
            android:layout_weight="1"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Solver"
            android:textSize="20dp"
            android:id="@+id/btnSolverN"
            android:layout_weight="1"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Salir"
            android:id="@+id/btnSalir"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>

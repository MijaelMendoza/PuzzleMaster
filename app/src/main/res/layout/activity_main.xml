<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#009688">

    <!-- Información del usuario seleccionado -->
    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario: - Puntaje: "
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- Botón para cambiar de usuario -->
    <Button
        android:id="@+id/btnChangeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Usuario"
        android:layout_below="@id/tvUserInfo"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Sección de Muestra -->
    <LinearLayout
        android:id="@+id/sample_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/btnChangeUser"
        android:layout_marginTop="16dp">

        <!-- Botones de juego existentes -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Juego Rapido"
            android:id="@+id/btQuickPlay"
            android:backgroundTint="#FC063593"
            android:textColor="#FFF"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="A*"
            android:id="@+id/btAstar"
            android:backgroundTint="#FC063593"
            android:textColor="#FFF"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="BFS"
            android:id="@+id/btBfs"
            android:backgroundTint="#FC063593"
            android:textColor="#FFF"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Juego con Imagenes"
            android:id="@+id/btImagenes"
            android:backgroundTint="#FC063593"
            android:textColor="#FFF"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Player vs AI"
            android:id="@+id/btVersus"
            android:backgroundTint="#FC063593"
            android:textColor="#FFF"
            />
    </LinearLayout>
</RelativeLayout>

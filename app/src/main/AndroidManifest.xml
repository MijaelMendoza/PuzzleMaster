<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Declarar que la aplicación requiere la cámara -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" /> <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rompecabezas"
        tools:targetApi="31">
        <activity
            android:name=".UserSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".image_puzzle"
            android:exported="false" />
        <activity
            android:name=".bfs"
            android:exported="false" />
        <activity
            android:name=".Versus"
            android:exported="false" />
        <activity
            android:name=".ImagePlay"
            android:exported="false" />
        <activity
            android:name=".QuickPlay"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>